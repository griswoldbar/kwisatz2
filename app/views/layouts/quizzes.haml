- content_for :content do
  =render 'layouts/quizzes/header'
  .container-fluid
    .row-fluid
      .span12
        #categories
          = yield(:categories)
    .row-fluid
      .span3
        .well.sidebar-nav
          .nav.nav-list
            = yield(:sidebar)
      .span6
        #quiz.row-fluid
          = content_for?(:quiz_content) ? yield(:quiz_content) : yield
          #quiz-info
          #quiz_categories
          #quiz-rounds
          #quiz-button
      .span3#rounds
    %hr
    =render 'layouts/quizzes/footer'
= render :template => 'layouts/application'